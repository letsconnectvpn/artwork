<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width; height=device-height; initial-scale=1">
    <title>{% trans "VPN User Portal" %}</title>
    <link href="{{ requestRoot }}css/normalize.css" media="screen" rel="stylesheet">
    <link href="{{ requestRoot }}css/screen.css" media="screen" rel="stylesheet">
    <!-- LC branding -->
    <link href="/vpn-user-portal/css/LC/LC.css" media="screen" rel="stylesheet">
    {% block head %}{% endblock %}
</head>
<body>
    <h1>{% trans "VPN User Portal" %}</h1>
    {% if activeItem is defined %}
    <ul class="menu">
      <li {%if activeItem == 'new' %}class="active"{% endif %}>           <a href="new">{% trans "New" %}</a></li>
      <li {%if activeItem == 'configurations' %}class="active"{% endif %}><a href="configurations">{% trans "Configurations" %}</a></li>
      <li {%if activeItem == 'account' %}class="active"{% endif %}>       <a href="account">{% trans "Account" %}</a></li>
      <li {%if activeItem == 'documentation' %}class="active"{% endif %}> <a href="documentation">{% trans "Documentation" %}</a></li>
    </ul>
    {% endif %}

    {% block content %}{% endblock %}

    <hr>
    <div class="footer">
        {% if supportedLanguages|length > 1 %}
            <form method="post" action="{{ requestRoot }}setLanguage">
                {% for key, language in supportedLanguages %}
                <button name="setLanguage" value="{{ key }}">{{ language }}</button>
                {% endfor %}
            </form>
        {% endif %}

        {% if _show_logout is defined and _form_auth_login_page is not defined %}
            <form method="post" action="{{ requestRoot }}_form/auth/logout">
                <button type="submit">Sign Out</button>
            </form>
        {% endif %}
    </div>
</body>
</html>
